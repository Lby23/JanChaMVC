
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>add</title>
    <link href="~/layui-v2.5.7/layui/css/layui.css" rel="stylesheet" />
    <script src="~/layui-v2.5.7/layui/layui.js"></script>
    <script src="~/Jquery/jquery-3.3.1.js"></script>
</head>
<body>
    <div>
        <br />
        <form class="layui-form" action="">
            <table>
                <tr>
                    <td>
                        <div class="layui-form-item">
                            <label class="layui-form-label">作品名称</label>
                            <div class="layui-input-block">

                                <input id="Hidden2" type="hidden" value="@ViewBag.data" name="pro_userid" />
                                <input type="text" name="pro_name" required lay-verify="required" placeholder="请输入标题" autocomplete="off" class="layui-input">
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="layui-form-item">
                            <label class="layui-form-label">作品分类</label>
                            <div class="layui-input-block">
                                <select name="pro_classify" id="fen" lay-verify="required">
                                    <option value=""></option>

                                </select>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <input id="Hidden1" type="hidden" name="pro_picture" />
                        <label class="layui-form-label">上传图片</label>
                        <button type="button" name="img" onclick="shang()" class="layui-btn" id="test1">
                            <i class="layui-icon" name="img">&#xe67c;</i>上传图片
                        </button>
                    </td>
                    <td>
                        <div class="layui-form-item">
                            <label class="layui-form-label">作品属性</label>
                            <div class="layui-input-block">
                                <select name="pro_proid" id="shu" lay-verify="required">
                                    <option value=""></option>

                                </select>
                            </div>
                        </div>
                    </td>
                </tr>
            </table>
            <table>
                <tr>
                    <td>
                        <div class="layui-form-item layui-form-text">
                            <label class="layui-form-label">备注</label>
                            <div class="layui-input-block">
                                <textarea name="pro_remark" placeholder="请输入备注" style="width:462px" class="layui-textarea"></textarea>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="layui-form-item layui-form-text">
                            <label class="layui-form-label">内容</label>
                            <div class="layui-input-block">
                                <textarea name="pro_content" placeholder="请输入内容" class="layui-textarea"></textarea>
                            </div>
                        </div>
                    </td>
                </tr>
            </table>
            <div class="layui-form-item">
                <div class="layui-input-block">
                    <button class="layui-btn" lay-submit lay-filter="formDemo">立即提交</button>
                    <button type="reset" class="layui-btn layui-btn-primary">重置</button>
                </div>
            </div>

        </form>
    </div>
    <script>
        layui.use('form', function () {
            var form = layui.form;
            $.ajax({
                url: 'http://localhost:54470/api/con_Show',
                type: 'get',
                dataType: 'json',
                success: function (data) {
                    var str = "";
                    $(data).each(function () {
                        str += '<option value="' + this.con_id + '">' + this.con_name + '</option>'
                    })
                    $("#fen").append(str);
                    form.render('select');
                }
            })
            $.ajax({
                url: 'http://localhost:54470/api/prop_Show',
                type: 'get',
                dataType: 'json',
                success: function (data) {
                    var str = "";
                    $(data).each(function () {
                        str += '<option value="' + this.pro_id + '">' + this.pro_name + '</option>'
                    })
                    $("#shu").append(str);
                    form.render('select');
                }
            })
            //监听提交
            form.on('submit(formDemo)', function (data) {

                $.ajax({
                    url: 'http://localhost:64502/api/Folder/Add',
                    type: 'post',
                    data: data.field,
                    success: function (data) {
                        if (data > 0) {
                            layer.msg('添加成功');
                        }
                    }
                })
                return false;
            });
        });
        //上传相片
        layui.use('upload', function () {
            var $ = layui.jquery
                , upload = layui.upload;

            //普通图片上传
            var uploadInst = upload.render({
                elem: '#test1'
                , url: '/Default/Upload'
                , before: function (obj) {
                    //预读本地文件示例，不支持ie8
                    obj.preview(function (index, file, result) {
                        $('#demo1').attr('src', result); //图片链接（base64）
                    });
                }
                , done: function (res) {
                    //如果上传失败
                    if (res.code > 0) {
                        return layer.msg('上传失败');
                    }
                    else {
                        $("#Hidden1").val(res.data);
                    }

                    //上传成功
                }
                , error: function () {
                    //演示失败状态，并实现重传
                    var demoText = $('#demoText');
                    demoText.html('<span style="color: #FF5722;">上传失败</span> <a class="layui-btn layui-btn-xs demo-reload">重试</a>');
                    demoText.find('.demo-reload').on('click', function () {
                        uploadInst.upload();
                    });
                }
            });
        });


    </script>
</body>
</html>
