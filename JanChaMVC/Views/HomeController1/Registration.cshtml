                var Age = $('#Age').val();
                var Phone = $('#Phone').val();
                var Emile = $('#Emile').val();
                var Note = $('#Note').val();
                var Number = $('#Number').val();
                var Password = $('#Password').val();
                $.ajax({
                    url: "http://localhost:64502/api/Login/Registration",
                    data: 
                        JSON.stringify({
                            UserName: UserName,
                            UserSex: UserSex,
                            Age: Age,
                            Phone: Phone,
                            Emile: Emile,
                            Note: Note,
                            Number: Number,
                            Password: Password
                        }),
                    type: 'post',
                    success: function (resut) {
                        if (resut > 0) {
                            alert("注册成功");

                        } else {
                            alert("注册失败");
                            location.reload();
                        }
                    },
                    contentType: 'application/json;'
                })
                
                return false;
            });
