@model JanChaMVC.Models.User

@{
    ViewData["Title"] = "Registration";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>注册</title>
    <script src="~/Jquery/jquery-3.3.1.js"></script>
    <link href="~/css/adminlogin.css" rel="stylesheet" />
    <link href="~/layui-v2.5.7/layui/css/layui.css" rel="stylesheet" />
</head>
<body>
    <div class="wrap">
        <img src="~/Img/-8d9ff779e1e113a.jpg" style="width:100%;height:100%" />
        <div class="loginForm" style="width: 500px;height: 1800px;">
            <form >
                <div class="usernameWrapDiv">
                    <div class="usernameLabel">
                        <label>用户名:</label>
                    </div>
                    <div class="usernameDiv">
                        <i class="layui-icon layui-icon adminIcon"></i>
                        <input id="UserName" class="layui-input adminInput"  type="text" name="UserName" placeholder="输入用户名">
                    </div>
                </div>
                <div class="usernameWrapDiv">
                    <div class="usernameLabel">
                        <label>性别:</label>
                    </div>
                    <div class="usernameDiv ">
                        <i class="layui-icon layui-icon  adminIcon"></i>
                        <input id="UserSex1" class="layui-radio-disbaled " value="0" type="radio" name="UserSex" checked="checked" />男
                        <input id="UserSex2" class="layui-radio-disbaled " value="1" type="radio" name="UserSex">女
                    </div>
                </div>
                <div class="usernameWrapDiv">
                    <div class="usernameLabel">
                        <label>年龄:</label>
                    </div>
                    <div class="passwordDiv">
                        <i class="layui-icon layui-icon adminIcon"></i>
                        <input id="Age" class="layui-input adminInput" type="text" name="Age" placeholder="输入年龄">
                    </div>
                </div>
                <div class="usernameWrapDiv">
                    <div class="usernameLabel">
                        <label>手机号:</label>
                    </div>
                    <div class="passwordDiv">
                        <i class="layui-icon layui-icon adminIcon"></i>
                        <input id="Phone" class="layui-input adminInput" type="text" name="Phone" placeholder="输入手机号">
                    </div>
                </div>
                <div class="usernameWrapDiv">
                    <div class="usernameLabel">
                        <label>电子邮件:</label>
                    </div>
                    <div class="passwordDiv">
                        <i class="layui-icon layui-icon adminIcon"></i>
                        <input id="Emile" class="layui-input adminInput" type="text" name="Emile" placeholder="输入年龄">
                    </div>
                </div>
                <div class="usernameWrapDiv">
                    <div class="usernameLabel">
                        <label>备注:</label>
                    </div>
                    <div class="passwordDiv">
                        <i class="layui-icon layui-icon adminIcon"></i>
                        <input id="Note" class="layui-input adminInput" type="text" name="Note" placeholder="备注">
                    </div>
                </div>
                <div class="usernameWrapDiv">
                    <div class="usernameLabel">
                        <label>账号:</label>
                    </div>
                    <div class="passwordDiv">
                        <i class="layui-icon layui-icon adminIcon"></i>
                        <input id="Number" class="layui-input adminInput" type="text" name="Number" placeholder="请输入账号">
                    </div>
                </div>
                <div class="usernameWrapDiv">
                    <div class="usernameLabel">
                        <label>密码:</label>
                    </div>
                    <div class="passwordDiv">
                        <i class="layui-icon layui-icon adminIcon"></i>
                        <input id="Password" class="layui-input adminInput" type="text" name="Password" placeholder="请输入密码">
                    </div>
                </div>

                <div class="usernameWrapDiv">
                    <div class="submitLabel"></div>
                    <div class="usernameDiv">
                        <input id="zc" type="button" class="submit layui-btn layui-btn-fluid layui-btn-normal" value="注册">
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script src="~/layui-v2.5.7/layui/layui.js"></script>
    <script> 

        $('#zc').click(function () {
            var UserName = $('#UserName').val();
            var UserSex = $('#wrap input[name="sex"]:checked ').val();
            UserSex = UserSex == "0" ? true : false;
            var Age = $('#Age').val();
            var Phone = $('#Phone').val();
            var Emile = $('#Emile').val();
            var Note = $('#Note').val();
            var Number = $('#Number').val();
            var Password = $('#Password').val();
            if (UserName == "") {
                alert("用户名不为空");
                location.reload();
            } else if (UserSex != "") {
                alert("用户性别不为空");
                location.reload();
            } else if (Phone == "" || $.trim(Phone).length != 11) {
                alert("用户手机号不为空");
                location.reload();
            } else if (Emile == "") {
                alert("电子邮件不为空");
                location.reload();
            } else if (Number == "") {
                alert("账号不为空");
                location.reload();
            } else if(Password == "") {
                alert("密码不为空");
                location.reload();
            }
            alert("注册ajax");
            $.ajax({

                url: "http://localhost:64502/api/Login/Registration",
                data: JSON.stringify({
                    UserName: UserName,
                    UserSex: UserSex,
                    Age: Age,
                    Phone: Phone,
                    Emile: Emile,
                    Note: Note,
                    Number: Number,
                    Password: Password
                }),
                type: 'post',
                success: function (resut) {
                    if (resut > 0) {
                        alert("注册成功");

                    } else {
                        alert("注册失败");
                        location.reload();
                    }
                },
                contentType: 'application/json;'
            })
        })
    </script>
</body>
</html>
