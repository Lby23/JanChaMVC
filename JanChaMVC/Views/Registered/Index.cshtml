    <!-- 注意：如果你直接复制所有代码到本地，上述js路径需要改成你本地的 -->

    <script>

        //JavaScript代码区域
        layui.use('element', function () {
            var element = layui.element;

        });

        layui.use('element', function () {
            var element = layui.element; //导航的hover效果、二级菜单等功能，需要依赖element模块

            //监听导航点击
            element.on('nav(demo)', function (elem) {
                //console.log(elem)
                layer.msg(elem.text());
            });
        });

        layui.use('table', function () {
            var table = layui.table;

            //方法级渲染
            var tableObj = table.render({
                elem: '#LAY_table_user'
                , url: 'http://localhost:64502/api/RegisteredUsers/GetUsers'
                , cols: [[
                    , { field: 'uId', title: 'ID', width: 80, sort: true, fixed: true }
                    , { field: 'userName', title: '用户名', width: 80 }
                    , {
                        field: 'userSex', title: '性别', width: 80, sort: true
                        , templet: function (d) {
                            if (d.userSex == true)
                                return '女'
                            else
                                return '男'
                        }
                    }
                    , { field: 'age', title: '年龄', width: 80 }
                    , { field: 'phone', title: '手机号' }
                    , { field: 'number', title: '账号', width: 80 }
                    , { fixed: 'right', title: '操作', toolbar: '#barDemo', width: 200 }
                ]]
                , id: 'testReload'
                , page: true
                , height: 310
            });
            //分页
            var $ = layui.$, active = {
                reload: function () {
                    var demoReload = $('#demoReload');
                    //执行重载
                    table.reload('testReload', {
                        page: {
                            curr: 1 //重新从第 1 页开始
                        }
                        , where: {
                            key: {
                                id: demoReload.val()
                            }
                        }
                    }, 'data');
                }
            };

            //监听行工具事件
            table.on('tool(user)', function (obj) {
                var data = obj.data;
                //console.log(obj)
                if (obj.event === 'detail') {//显示
                    layer.open({
                        type: 1,
                        title: '查看',
                        content: $('#show'),
                        width: '500px',
                        area: ['740px', '500px'],
                        shade: 0,
                        btnAlign: 'c' //按钮居中
                        , shade: 0 //不显示遮罩
                        , success: function () {
                            $('input[name ="UId"]').val(data.uId),
                                $('input[name ="UserName"]').val(data.userName),
                                $('input[name="sex"]:checked').val(data.userSex),
                                $('input[name ="Age"]').val(data.age),
                                $('input[name ="Phone"]').val(data.phone),
                                $('input[name ="Number"]').val(data.number)
                        }
                    })
                } else if (obj.event === 'del') {//删除
                    layer.confirm('真的删除行么', function (index) {
                        $.ajax({
                            url: "http://localhost:64502/api/RegisteredUsers/Delete?UId=" + data.uId,
                            type: 'delete',
                            success: function (result) {
                                if (result > 0) {
                                    layer.msg("删除成功！");
                                    tableObj.reload();//重载表格
                                }
                                else {
                                    layer.msg("删除失败");
                                }
                            }
                        })
                    })
                }
                else if (obj.event === 'edit') {//修改
                    layer.open({
                        type: 1,
                        title: '修改',
                        content: $('#Endil'),
                        width: '500px',
                        area: ['740px', '500px'],
                        btn: ['修改', '关闭'],
                        shade: 0,
                        btnAlign: 'c' //按钮居中
                        , shade: 0 //不显示遮罩
                        , yes: function () {
                            alert("修改");
                            $.ajax({
                                url: "http://localhost:64502/api/RegisteredUsers/Enlt",
                                type: "put",
                                data: JSON.stringify({
                                    UId: $('input[name ="UId"]').val(),
                                    UserName: $('input[name ="UserName"]').val(),
                                    UserSex: $('input[name="sex"]:checked').val(),
                                    Age: $('input[name ="Age"]').val(),
                                    Phone: $('input[name ="Phone"]').val(),
                                    Number: $('input[name ="Number"]').val(),
                                    Password: $('input[name ="Password"]').val(),
                                }),
                                success: function (result) {
                                    if (result > 0) {
                                        alert("修改成功");
                                    }
                                    else {
                                        alert("修改失败");
                                        location.reload();
                                    }
                                },
                                dataType: "json",
                                contentType: "application/json"
                            })
                            layer.closeAll();
                        }
                        , success: function () {
                            $('input[name ="UId"]').val(data.uId),
                                $('input[name ="UserName"]').val(data.userName),
                                $('input[name="sex"]:checked').val(data.userSex),
                                $('input[name ="Age"]').val(data.age),
                                $('input[name ="Phone"]').val(data.phone),
                                $('input[name ="Number"]').val(data.number),
                                $('input[name ="Password"]').val(data.password)
                        }
                    })
                }
            })

            //添加弹框
            $('#btnzeng').click(function () {
                layer.open({
                    type: 1
                    , title: '添加文章'
                    , content: $('#create')
                    , width: '500px'
                    , area: ["800px", "600px"]
                    , btn: '关闭全部'
                    , btnAlign: 'c' //按钮居中
                    , shade: 0 //不显示遮罩
                    , yes: function () {
                        layer.closeAll();
                    }
                });
            })
            //修改
            $('#End').click(function () {
                alert(data.uId);
                $.ajax({
                    url: "http://localhost:64502/api/RegisteredUsers/Enlt",
                    type: "post",
                    data: JSON.stringify({
                        UId: $('input[name ="UId"]').val(),
                        UserName: $('input[name ="UserName"]').val(),
                        UserSex: $('input[name="sex"]:checked').val(),
                        Age: $('input[name ="Age"]').val(),
                        Phone: $('input[name ="Phone"]').val(),
                        Number: $('input[name ="Number"]').val(),
                        Password: $('input[name ="Password"]').val(),
                    }),
                    success: function (result) {
                        if (result > 0) {
                            alert("修改成功");
                        }
                        else {
                            alert("修改失败");
                            location.reload();
                        }
                    },
                    dataType: "json",
                    contentType: "application/json"
                })
            })
            //添加数据
            $('#post').click(function () {
                alert(123);
                $.ajax({
                    url: "http://localhost:64502/api/RegisteredUsers/Add",
                    type: "post",
                    data: JSON.stringify({
                        UserName: $('input[name ="UserName"]').val(),
                        UserSex: $('input[name="sex"]:checked').val(),
                        Age: $('input[name ="Age"]').val(),
                        Phone: $('input[name ="Phone"]').val(),
                        Number: $('input[name ="Number"]').val(),
                        Password: $('input[name ="Password"]').val(),
                    }),
                    success: function (result) {
                        if (result > 0) {
                            alert("添加成功");
                        }
                        else {
                            alert("添加失败");
                            location.reload();
                        }
                    },
                    dataType: "json",
                    contentType: "application/json"
                })
            })
            //开始搜索的点击按钮

            $('.demoTable .layui-btn').on('click', function () {
                table.reload('testReload', {
                    page: {
                        curr: 1
                    }, where: {
                        UserName: $('input[name ="UserName"]').val(),
                        Number: $('input[name ="Number"]').val()
                    }
                })
            });
        });
    </script>
