<script>

    //JavaScript代码区域
    layui.use(['element', 'table', 'form'], function () {
        var element = layui.element;
        var table = layui.table;
        var form = layui.form;

        var tableObj = table.render({
            elem: '#demo'
            , height: 500
            , width: 1750
            , url: 'http://localhost:64502/api/Recruit/GetRecruits' //数据接口
            , page: true //开启分页
            , cols: [[ //表头
                { field: 'rid', title: '序号', width: 80, fixed: 'left' }
                , { field: 'rtype', title: '种类', width: 100 }
                , { field: 'rposition', title: '职位', width: 150 }
                , { field: 'rpositionDescride', title: '职位描述', width: 100 }
                , { field: 'rlocation', title: '地址', width: 100 }
                , { field: 'rcompany', title: '公司', width: 100 }
                , {
                    field: 'rstate', title: '状态', width: 80,
                    templet: function (d) {
                        return d.Rstate ? "启用" : "禁用";
                    }
                }
                , { field: 'rtime', title: '发布时间', width: 200 }
                , { field: 'rperson', title: '发布人', width: 135 }
                , { title: '操作', width: 300, toolbar: "#bardome" }
            ]]
        });
        //重置
        $("#chongzhi").click(function () {
            $("[id=tel1]").val("");
            tableObj.reload();
        });
        //查询
        $("#chaxun").click(function () {
            tableObj.reload({
                where: {
                    RPosition: $("[name=RPosition]").val()
                },
                page: {
                    curr: 1
                }
            })
        });

        table.on('tool(test)', function (obj) { //注：tool 是工具条事件名，test 是 table 原始容器的属性 lay-filter="对应的值"
            var data = obj.data; //获得当前行数据
            var layEvent = obj.event; //获得 lay-event 对应的值（也可以是表头的 event 参数对应的值）
            var tr = obj.tr; //获得当前行 tr 的 DOM 对象（如果有的话）

            if (layEvent === 'detail') { //查看
                index = layer.open({
                    type: 1,
                    width: 400
                    , btn: ['关闭']
                    , closeBtn: 1,
                    yes: function (index, layero) {
                        layer.close(index); //如果设定了yes回调，需进行手工关闭
                    },
                    success: function () {
                        if (data.Rtype == "社会招聘") {
                            $("#IRtypea").prop('checked', true);
                        } else if (data.Rtype == "毕业生招聘") {
                            $("#IRtypeb").prop('checked', true);
                        } else if (data.Rtype == "实习生招聘") {
                            $("#IRtypec").prop('checked', true);
                        }
                        $("[name=Rposition]").val(data.Rposition);
                        $("[name=RpositionDescride]").val(data.RpositionDescride);
                        $("[name=Rlocation]").val(data.Rlocation);
                        $("[name=Rcompany]").val(data.Rcompany);
                        if (data.Rstate == true) {
                            $("#Rstate123").prop('checked', true);
                        } else {
                            $("#Rstate1234").prop('checked', true);
                        }
                        $("[name=Rtime]").val(data.Rtime);
                        $("[name=Rperson]").val(data.Rperson);
                        form.render();
                    }
                    , content: $("#chakan")
                });
            } else if (layEvent === 'del') { //删除
                layer.confirm('真的删除行么', function (index) {
                    $.ajax({
                        url: "http://localhost:64502/api/Recruit?RId=" + data.Rid,
                        type: "delete",
                        success: function (result) {
                            if (result > 0) {
                                layer.msg("删除成功");
                                layer.close(index);
                                tableObj.reload();
                            } else {
                                layer.msg("删除失败")
                            }
                        }
                    });

                });
            } else if (layEvent === 'edit') { index = layer.open({
                type: 1,
                width: 400
                , btn: ['修改', '关闭']
                , title: "修改"
                , closeBtn: 1,
                success: function () {
                    if (data.Rtype == "社会招聘") {
                        $("#IRtypeaaa").prop('checked', true);
                    } else if (data.Rtype == "毕业生招聘") {
                        $("#IRtypebbb").prop('checked', true);
                    } else if (data.Rtype == "实习生招聘") {
                        $("#IRtypeccc").prop('checked', true);
                    }
                    $("[name=Rposition]").val(data.Rposition);
                    $("[name=RpositionDescride]").val(data.RpositionDescride);
                    $("[name=Rlocation]").val(data.Rlocation);
                    $("[name=Rcompany]").val(data.Rcompany);
                    if (data.Rstate == true) {
                        $("#IRstate321").prop('checked', true);
                    } else {
                        $("#IRstate567").prop('checked', true);
                    }
                    $("[name=Rtime]").val(data.Rtime);
                    $("[name=Rperson]").val(data.Rperson);
                    form.render();
                }
                , content: $('#xiugai') //这里content是一个DOM，注意：最好该元素要存放在body最外层，否则可能被其它的相对元素所影响
                , yes: function (index, layero) {
                    $.ajax({
                        url: "http://localhost:64502/api/Recruit?RId=" + data.Rid,
                        type: "put",
                        data: JSON.stringify({
                            Rid: data.Rid,
                            Rtype: $("input[name='Rtype']:checked").val(),
                            Rposition: $("[name=Rposition]").val(),
                            RpositionDescride: $("[name=RpositionDescride]").val(),
                            Rlocation: $("[name=Rlocation]").val(),
                            Rcompany: $("[name=Rcompany]").val(),
                            Rstate: $("#IRstate1").prop("checked") == true ? true : false,
                            Rtime: $("[name=Rtime]").val(),
                            Rperson: $("[name=Rperson]").val(),
                        }),
                        success: function (result) {
                            if (result > 0) {
                                layer.msg("修改成功");
                                layer.close();
                                tableObj.reload();
                            } else {
                                layer.msg("修改失败");
                            }
                        },
                        contentType: "application/json",
                    });
                    return false;
                }, btn2: function (index, layero) {
                    layer.close(index);
                }
            });
        }
        });

        form.on('submit(add)', function (data) {
            console.log(data.elem) //被执行事件的元素DOM对象，一般为button对象
            console.log(data.form) //被执行提交的form对象，一般在存在form标签时才会返回
            console.log(data.field) //当前容器的全部表单字段，名值对形式：{name: value}
            $.ajax({
