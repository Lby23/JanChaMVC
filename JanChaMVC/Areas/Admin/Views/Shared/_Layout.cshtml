    <title>开始使用layui</title>

    <link href="~/layui-v2.5.7/layui/css/layui.css" rel="stylesheet" />
    <style type="text/css">

        footer {
            height: 250px;
            background: #141414;
            box-sizing: border-box;
            position: relative
        }

            footer .footer {
                padding-top: 55px;
                position: relative
            }

                footer .footer .logo {
                    width: 200px
                }

                footer .footer .footerUl {
                    position: absolute;
                    top: 40px;
                    left: 50%;
                    transform: translateX(-50%);
                    color: #fff;
                    font-size: 0
                }

                    footer .footer .footerUl li {
                        float: left;
                        margin: 0 5px;
                        font-size: 12px
                    }

                        footer .footer .footerUl li > p:first-child {
                            font-size: 14px;
                            margin-bottom: 10px;
                            cursor: pointer;
                            color: #fff
                        }

                        footer .footer .footerUl li p:first-child span {
                            margin-left: 12px
                        }

                        footer .footer .footerUl li div {
                            color: #ccc;
                            cursor: pointer
                        }

                            footer .footer .footerUl li div a {
                                text-decoration: none;
                                color: #ccc;
                                cursor: pointer
                            }

                                footer .footer .footerUl li div a:hover {
                                    color: #fff
                                }

                footer .footer .codeBox {
                    position: absolute;
                    right: 25px;
                    top: 0;
                    color: #fff;
                    font-size: 14px;
                    text-align: center
                }

                footer .footer .footerUl li p a {
                    text-decoration: none;
                    color: #fff
                }

                footer .footer .codeBox .span {
                    padding-right: 15px;
                    border-right: 1px solid #ccc
                }

                footer .footer .codeBox .wx {
                    width: 20px;
                    height: 20px;
                    vertical-align: middle;
                    margin-left: 10px
                }

            footer .code {
                width: 80px;
                height: 80px;
                margin-top: 40px
            }

                footer .code img {
                    width: 132%;
                    height: 132%;
                }

        .footer .text {
            padding-top: 10px;
            color: #ccc;
            font-size: 12px
        }

        footer .footerText {
            width: 100%;
            text-align: center;
            padding: 20px 0;
            border-top: 1px solid #000;
            color: #fff;
            position: absolute;
            bottom: 20px;
            left: 0;
            font-size: 13px;
            color: #eee
        }
    </style>
</head>
